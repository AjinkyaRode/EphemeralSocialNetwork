<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/main_pg"
    android:background="@drawable/social2"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/header"
        android:text="@string/credentials"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:textColor="#ffffffff"
        android:gravity="center"/>



    <LinearLayout
        android:id="@+id/uname_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        >

        <EditText
            android:id="@+id/fld_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/lbl_enter_username"
            android:layout_marginBottom="10dp"
            android:textColorHint="#ffffffff"
            android:textColor="#ffffffff"
            android:singleLine="true"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/uname_block">


            <EditText
                android:id="@+id/fld_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/lbl_enter_password"
                android:singleLine="true"
                android:password="true"
                android:layout_marginBottom="10dp"
                android:textColorHint="#ffffffff"
                android:textColor="#ffffffff"/>
        </LinearLayout>

    <View android:id="@+id/l2"
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:background="#ffffff" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="fill_parent"
        android:prompt="@string/topics_prompt"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#ffffffff"/>


    <Button
        android:id="@+id/btn_join"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/uname_block"
        android:layout_gravity="center|top"
        android:background="@drawable/login4" />
    </LinearLayout>

